# =============================================================================
# EVALON - ROOT ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and update with your values
# NEVER commit .env to version control
# =============================================================================

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV=development

# =============================================================================
# PORTS
# =============================================================================
# Frontend Development Server
FRONTEND_PORT=3001

# Backend API Server
PORT=5001

# Real-time WebSocket Server  
REALTIME_PORT=5004

# Python AI Service
AI_SERVICE_PORT=5002

# =============================================================================
# URLS (for Docker/Production)
# =============================================================================
FRONTEND_URL=http://localhost:3001
VITE_API_BASE_URL=http://localhost:5001
VITE_SOCKET_URL=http://localhost:5004
VITE_AI_URL=http://localhost:5002

# =============================================================================
# CORS
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# DATABASE
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/evalon

# =============================================================================
# SECURITY (Generate new values for production!)
# =============================================================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# =============================================================================
# EMAIL SERVICE (Gmail)
# =============================================================================
EMAIL_USER=your-gmail@gmail.com
EMAIL_PASS=your-app-password

# =============================================================================
# SMS SERVICE (Twilio)
# =============================================================================
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# FIREBASE (for Google Sign-In)
# =============================================================================
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Backend Firebase Admin (path to service account JSON)
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
DEBUG=false