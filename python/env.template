# =============================================================================
# EVALON AI SERVICE - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# IMPORTANT: Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# AI service port
PORT=5002

# Flask debug mode (true | false) - MUST be false in production
FLASK_DEBUG=false

# =============================================================================
# SECURITY
# =============================================================================
# JWT Secret - MUST match the backend JWT_SECRET
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
# Path to custom models (optional)
# MODEL_PATH=./models

# Enable behavior classification CNN model
ENABLE_CNN_MODEL=true

# Enable ML ensemble models
ENABLE_ENSEMBLE_MODELS=true







